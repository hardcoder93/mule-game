<?xml version="1.0" encoding="UTF-8"?>

<project name="Yuna Lee's AntLab" basedir="." default="all">

	<target name="init">
		<property name="src" location="src" />
		<property name="build" location="build" />
		<property name="library" location="lib" />
		<property name="apidoc" location="apidoc" />

		<path id="classpath">
			<fileset dir="${library}" includes="resources.jar" />
		</path>
	</target>

	<target name="prepare" depends="init, clean">
		<mkdir dir="${build}" />
		<mkdir dir="${apidoc}" />
	</target>

	<target name="compile" depends="prepare">
		<javac srcdir="${src}" destdir="${build}" classpathref="classpath" includeAntRuntime="false" />

	</target>

	<target name="javadoc" depends="init">
		<javadoc sourcepath="${src}" destdir="${apidoc}">
			<classpath>

				<path refid="classpath" />
			</classpath>
		</javadoc>
	</target>


	<target name="jar" depends="compile">
		<jar basedir="${build}" destfile="${build}/AntLabRun.jar" />

	</target>

	<target name="run" depends="jar">
		<java classname="edu.gatech.oad.antlab.pkg1.AntLabMain">
			<classpath>
				<path refid="classpath" />
				<path location="${build}/AntLabRun.jar" />
			</classpath>
		</java>
	</target>

	<target name="all" depends="init,prepare, compile, jar, run, javadoc">
	</target>

	<target name="clean">
		<delete dir="${build}" />
		<delete dir="${apidoc}" />
	</target>

</project>